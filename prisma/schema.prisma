generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String          @id @default(cuid())
  name                String?
  email               String?         @unique
  emailVerified       DateTime?
  image               String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  password            String?
  polarCustomerId     String?
  polarSubscriptionId String?
  subscriptionPlanId  String?
  subscriptionStatus  String?
  polarOrderId        String?
  accounts            Account[]
  clients             ClientProfile[]
  posts               Post[]
  preferences         Preferences?
  sessions            Session[]
  topics              Topic[]
}

model Account {
  id                String         @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  accountHandle     String?
  accountImage      String?
  accountName       String?
  clientProfileId   String?
  clientProfile     ClientProfile? @relation(fields: [clientProfileId], references: [id])
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Topic {
  id              String         @id @default(cuid())
  name            String
  userId          String
  enabled         Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  notes           String?
  stance          String?
  clientProfileId String?
  clientProfile   ClientProfile? @relation(fields: [clientProfileId], references: [id])
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ClientProfile {
  id                  String    @id @default(cuid())
  userId              String
  name                String
  niche               String?
  bio                 String?
  tone                String?
  targetAudience      String?
  avatarUrl           String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  linkedinPostsPerDay Int       @default(1)
  styleSample         String?
  threadsPostsPerDay  Int       @default(1)
  twitterPostsPerDay  Int       @default(1)
  accounts            Account[]
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts               Post[]
  topics              Topic[]
}

model Post {
  id              String         @id @default(cuid())
  content         String
  topic           String?
  status          String         @default("DRAFT")
  platform        String?
  userId          String
  scheduledFor    DateTime?
  publishedAt     DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  imageUrl        String?
  clientProfileId String?
  clientProfile   ClientProfile? @relation(fields: [clientProfileId], references: [id])
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Preferences {
  id                  String   @id @default(cuid())
  userId              String   @unique
  postsPerDay         Int      @default(1)
  styleSample         String?
  linkedinConnected   Boolean  @default(false)
  twitterConnected    Boolean  @default(false)
  updatedAt           DateTime @updatedAt
  linkedinPostsPerDay Int      @default(1)
  twitterPostsPerDay  Int      @default(1)
  threadsConnected    Boolean  @default(false)
  threadsPostsPerDay  Int      @default(1)
  tone                String?  // "Professional", "Casual", etc.
  onboardingCompleted Boolean  @default(false)
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
